<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_page?(controller: "appointments", action: "new") %>

    <div class="field">
      <%= f.label :start_time %>
      <%= f.datetime_select :start_time, ampm: true %>
    </div>

  <% elsif current_page?(controller: "appointments", action: "show") %>

    <div class="field">
      <div>Priority</div>
      <% f.label :status %>
      <ul>
        <li>
          <%= f.radio_button :status, "low", checked: true %>
          <%= f.label :status_low, "Low" %>
        </li>
        <li>
          <%= f.radio_button :status, "high" %>
          <%= f.label :status_high, "High" %>
        </li>
      </ul>
    </div>

    <div class="field">
      <%= f.label :reason %><br>
      <%= f.text_area :reason %>
    </div>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
